let reports = [];
let cases = [];
let caseCounter = 1001;

window.onload = function () {

firebase.database().ref().on('value'.then(snapshot => {
  const data = snapshot.val();
  if (data) {
    users = data.users || {};
    reports = data.reports || [];
    cases = data.cases || [];
    caseCounter = data.caseCounter || 1001;
  }
  
  const btn = document.getElementById('loginBtn');
  const status = document.getElementById('firebaseStatus');
  if (btn) {
    
    
  }
  if (status) {
    status.innerText = 'Connected to Firebase ‚úÖ';
    status.style.color = 'lime';
  }
}).catch(error => {
  const status = document.getElementById('firebaseStatus');
  if (status) {
    status.innerText = '‚ùå Failed to connect to Firebase: ' + error.message;
    status.style.color = 'red';
  }
});

// original block continues...
  firebase.database().ref().on('value'.then(snapshot => {
